{
  "name": "maikai",
  "version": "0.7.0",
  "description": "RFC-compliant health check middleware for HTTP APIs and microservices written in Node",
  "author": "",
  "license": "MIT",
  "main": "./lib/health.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/inadarei/maikai"
  },
  "engines": {
    "node": ">=8.2"
  },
  "dependencies": {},
  "devDependencies": {
    "blue-tape": "^1.0.0",
    "coveralls": "^3.0.0",
    "eslint": "^5.3.0",
    "express": "^4.11.0",
    "fakepromise": "^1.0.5",
    "koa": "^2.5.2",
    "koa-router": "^7.4.0",
    "metalogger": "^2.2.0",
    "node-fetch": "^2.2.0",
    "nyc": "^12.0",
    "tap-nirvana": "^1.1.0",
    "tape": "^4.9.1"
  },
  "scripts": {
    "lint": "eslint lib test",
    "lint-fix": "eslint --fix lib test",
    "pretest": "npm run lint",
    "test": "export NODE_TAPE_OBJECT_PRINT_DEPTH=infinity && nyc blue-tape test/**/*-test.js | tap-nirvana ",
    "test-fast": "blue-tape test/**/*-test.js | tap-nirvana",
    "test-cov": "nyc blue-tape test/**/*-test.js",
    "coveralls": "npm run test-cov -- && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": [
      50,
      80
    ],
    "statements": [
      55,
      80
    ],
    "functions": [
      55,
      80
    ],
    "branches": [
      55,
      80
    ],
    "include": [
      "lib/**/*.js",
      "lib/*.js",
      "test/**/*.js",
      "*.js"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "all": true,
    "report-dir": "./coverage"
  }
}
